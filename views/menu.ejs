        </div>
  
        <div class="credit">
          <p>Created by <a href="#">PaguyubanTeam</a>. | &copy; 2024.</p>
        </div>
      </footer>

    <script>
        feather.replace();

        let cart = [];

        function addToCart(itemName, itemPrice) {
            // Check if item is already in cart
            let found = false;
            cart.forEach(item => {
                if (item.name === itemName) {
                    found = true;
                    item.quantity++;
                }
            });

            // If item not found, add it to cart
            if (!found) {
                cart.push({ name: itemName, price: itemPrice, quantity: 1 });
            }
            
            updateCart();
        }

        function updateCart() {
            const cartContainer = document.querySelector('.cart-items');
            cartContainer.innerHTML = '';
            let totalPrice = 0;
            cart.forEach(item => {
                totalPrice += item.price * item.quantity;
                cartContainer.innerHTML += `
                    <li class="cart-item">
                        <span class="cart-item-name">${item.name}</span>
                        <span class="cart-item-actions">
                            <button onclick="decrementItem('${item.name}')">-</button>
                            ${item.quantity}
                            <button onclick="incrementItem('${item.name}')">+</button>
                        </span>
                        Rp ${item.price * item.quantity}
                    </li>`;
            });
            document.querySelector('.cart-total').innerText = `Total: Rp ${totalPrice}`;
        }

        function decrementItem(itemName) {
            cart.forEach(item => {
                if (item.name === itemName) {
                    item.quantity--;
                    if (item.quantity === 0) {
                        cart.splice(cart.indexOf(item), 1); // Remove item from cart if quantity becomes 0
                    }
                }
            });
            updateCart();
        }

        function incrementItem(itemName) {
            cart.forEach(item => {
                if (item.name === itemName) {
                    item.quantity++;
                }
            });
            updateCart();
        }

        function showCart() {
            const cartContainer = document.querySelector('.cart');
            cartContainer.classList.toggle('show');
        }
    </script>
</body>
</html>
