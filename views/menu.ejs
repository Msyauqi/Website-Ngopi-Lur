    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,300;0,400;0,700;1,700&display=swap"
      rel="stylesheet"
    />
    <script src="https://unpkg.com/feather-icons"></script>
    <link rel="stylesheet" href="css/menu.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <style>
        /* CSS untuk keranjang belanja */
        .cart {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #917519;
            border: 1px solid #c9ad10;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .cart:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            transform: scale(1.05);
        }

        .cart h2 {
            font-size: 16px;
            margin-top: 0;
        }

        .cart-items {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .cart-item {
            margin-bottom: 5px;
        }

        .cart-item-name {
            font-weight: bold;
        }

        .cart-item-actions {
            display: flex;
            align-items: center;
        }

        .cart-item-actions button {
            margin: 0 5px;
            cursor: pointer;
            background-color: transparent;
            border: none;
            font-size: 12px;
            padding: 2px 5px;
            border-radius: 3px;
            transition: background-color 0.3s ease;
        }

        .cart-item-actions button:hover {
            background-color: #f0f0f0;
        }

        .cart-total {
            font-weight: bold;
            margin-top: 10px;
        }

        /* CSS untuk tombol tambah */
        .add-to-cart-btn {
            display: inline-block;
            background-color: #684725;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-to-cart-btn:hover {
            background-color: #bb8c0c;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a href="#" class="navbar-logo">Ngopi<span>Lur</span></a>
  
        <div class="navbar-ext">
          <a href="#" id="search"><i data-feather="search"></i></a>
          <a href="#" id="shopping-bag"><i data-feather="shopping-bag"></i></a>
        </div>
      </nav>

      <button onclick="goToPagemenu()" class="menubtn">Back</button>

    <section id="menuKami" class="menuKami">
    
    <h2>Our<span>Menu</span></h2>
      <h5>-Drinks-</h5>
