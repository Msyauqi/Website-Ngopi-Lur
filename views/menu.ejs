          <button class="add-to-cart-btn">Add to Cart</button>
        </div>
      </div>
      
      <div class="row">
        <!--Menu 5-->
        <div class="menu-card" onclick="addToCart('Vanilla Latte', 34000)">
          <img
            src="img/menu/Minuman/Vanilla Latte.jpg"
            alt="Vanilla Latte"
            class="menu-card-image"
          />
          <h4 class="menu-card-title">Vanilla Latte</h4>
          <p>Rp 34.000</p>
