          <button class="add-to-cart-btn">Add to Cart</button>
        </div>
        <!--Menu 3-->
        <div class="menu-card" onclick="addToCart('Matcha Latte', 35000)">
          <img
            src="img/menu/minuman/3.png"
            alt="Matcha Latte"
            class="menu-card-image"
          />
          <h4 class="menu-card-title">Matcha Latte</h4>
          <p>Rp 35.000</p>
          <button class="add-to-cart-btn">Add to Cart</button>
        </div>
        <!--Menu 4-->
        <div class="menu-card" onclick="addToCart('Coffee Milk', 30000)">
          <img
            src="img/menu/minuman/4.png"
